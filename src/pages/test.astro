</main>

<script>
  import { gsap } from "gsap";
  const textT = document.getElementById('T');
  const texte = document.getElementById('e');
  const textx = document.getElementById('x');
  const textt = document.getElementById('t');

  const textTl = gsap.timeline({
    defaults: {
      duration: 2,
      ease: "power4.inOut",
      stagger: 0.15,
      yoyo: true,
      repeat: -1,
    }
  });

  // ? el porcentaje se calcula as√≠: [n] elementos * 100 - 100;
  textTl.to([textT, texte, textx, textt], {
    y: '-=1300%',
  })

</script>