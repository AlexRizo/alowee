---
import { Icon } from "astro-icon/components";
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon = 'design-icon' } = Astro.props;

---

<div
class="border border-neutral-700 bg-neutral-900 p-10 flex flex-col items-center gap-5 max-w-75 rounded-lg h-[500px] mx-auto"
>
<Icon name={icon} class="size-12 mt-20" />
<h2 class="text-2xl font-bold">{title}</h2>
<p class="text-gray-50 text-sm text-center">
  {description}
</p>
</div>