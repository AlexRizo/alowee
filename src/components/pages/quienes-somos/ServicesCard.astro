---
import { Icon } from "astro-icon/components";
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon = 'design-icon' } = Astro.props;



---
<div class="bg-[url('/img/services-cine.webp')] bg-cover bg-center max-w-75 hover:scale-110 transition-all rounded-lg border border-neutral-700 overflow-hidden mx-auto">
  <div
  class="bg-neutral-900 hover:bg-purple-900/70 p-10 flex flex-col items-center gap-5 lg:h-[500px] h-[400px]"
  >
    <Icon name={`services/${icon}`} class="size-12 lg:mt-20 mt-5" />
    <h2 class="text-2xl font-bold">{title}</h2>
    <p class="text-gray-50 text-sm text-center">
      {description}
    </p>
  </div>
</div>