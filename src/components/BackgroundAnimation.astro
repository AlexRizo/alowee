<section class="bg-warning-600 h-screen w-full flex items-center justify-center absolute overflow-hidden">
  <div class="w-[60%] h-full absolute circle-container">
    <span class="w-[60vw] h-[60vw] bg-info-600 rounded-full absolute blur-[120px] circle translate-x-1/2 z-2"></span>
    <span class="w-[60vw] h-[60vw] bg-neutral-600 rounded-full absolute blur-[120px] circle -translate-x-1/2 z-1"></span>
    <span class="w-[40vw] h-[40vw] bg-warning-600 rounded-full absolute blur-[120px] circle -translate-x-1/4 z-3"></span>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  const timeline = gsap.timeline({ repeat: -1, yoyo: true });

  // 1. Seleccionamos los <span> hijos del <section> que contiene la clase "circle"
  const circles = document.querySelectorAll('.circle') as NodeListOf<HTMLSpanElement>;
  const circleContainer = document.querySelector('.circle-container') as HTMLDivElement;
  const circle1 = circles[0], circle2 = circles[1], circle3 = circles[2];

  timeline.to(circle1, {
    x: -100,
    y: 300,
    duration: 6,
    ease: 'power1.inOut',
  }).to(circle2, {
    x: 250,
    y: -350,
    duration: 6,
    ease: 'power1.inOut',
  }, 0).to(circle3, {
    x: 500,
    y: 200,
    duration: 6,
    ease: 'power1.inOut',
  }, 0).to(circle1, {
    x: 100,
    y: -300,
    duration: 6,
    ease: 'power1.inOut',
  }, 6).to(circle2, {
    x: -250,
    y: 300,
    duration: 6,
    ease: 'power1.inOut',
  }, 6).to(circle3, {
    x: -500,
    y: -200,
    duration: 6,
    ease: 'power1.inOut',
  }, 6);

  // Añadir rotación infinita al contenedor de círculos (animación de fondo)
  gsap.to(circleContainer, {
    rotation: 360,
    duration: 40,
    ease: 'linear',
    repeat: -1,
    transformOrigin: 'center center'
  });
</script>