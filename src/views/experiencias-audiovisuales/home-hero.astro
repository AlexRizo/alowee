---
import PageHomeTitle from "@components/PageHomeTitle.astro";
import "@styles/custom.css";
---

<section
  class="container mx-auto lg:grid lg:grid-cols-2 flex flex-col h-screen snap-start pt-20.5 relative lg:px-0 px-6 overflow-hidden"
>
  <img
    src="img/puntos.svg"
    alt="Puntos"
    class="absolute lg:bottom-10 bottom-24 lg:left-0 left-2 xl:w-8 lg:w-6 w-5"
  />
  <article class="flex flex-col justify-center items-end">
    <div class="lg:w-3/4 flex flex-col gap-5">
      <PageHomeTitle
        title="Experiencias"
        titleExalted="audiovisuales"
        description="Desde contenido para redes sociales hasta promocionales en proyectores de cine, transformamos ideas en videos dinámicos, interactivos y memorables."
      />
      <picture class="picture mt-2 lg:h-auto h-35">
        <img
          src="img/servicios-integrales/contenido.webp"
          alt="Representación de contenido digital"
          class="rounded h-full mx-auto"
        />
      </picture>
    </div>
  </article>

  <div class="flex justify-start items-end relative lg:mx-0 mt-auto">
    <img
      src="img/experiencias-audiovisuales/camara-icon.webp"
      alt="Cámara"
      class="absolute lg:top-20 lg:right-2/5 top-10 right-1 floating-element-3s"
    />
    <img
      src="img/experiencias-audiovisuales/cel-like-icon.webp"
      alt="Celular"
      class="absolute lg:top-20 lg:left-60 top-6 left-20 -rotate-16 floating-element-6s blur-[3px]"
    />
    <img
      src="img/experiencias-audiovisuales/bocina-icon.webp"
      alt="Bocina"
      class="absolute lg:top-32 lg:left-24 top-36 left-4 -rotate-8 blur-[2.5px] floating-element-9s"
    />
    <img
      src="img/experiencias-audiovisuales/monitor-icon.webp"
      alt="Monitor"
      class="absolute lg:top-62 lg:left-6 top-62 left-10 -rotate-12 blur-[1.5px] floating-element-3s delay-3s"
    />

    <picture class="lg:-translate-x-24 lg:w-[703px] w-86 mx-auto">
      <img
        src="img/experiencias-audiovisuales/personaje.webp"
        alt="Personaje"
      />
    </picture>
  </div>

  <img src="img/puntos.svg" alt="Puntos" class="absolute lg:top-30 top-24 lg:right-0 right-2 xl:w-8 lg:w-6 w-5" />
</section>
