<section
  class="h-screen snap-start bg-[url('/img/servicios-integrales/experiencia-bg.webp')] bg-cover bg-center flex items-center section-01 lg:px-0 px-6"
>
  <div class="container mx-auto lg:grid lg:grid-cols-2 flex flex-col lg:gap-16 gap-10">
    <article class="flex flex-col text-black items-center lg:ml-auto">
      <picture class="como-lo-hacemos lg:w-auto w-56">
        <img
          src="/img/soluciones-impresas/como-lo-hacemos.webp"
          alt="Como lo hacemos"
        />
      </picture>
      <h2 class="lg:text-[42px] text-4xl font-bold title-section-01">
        ¿Como lo <span
          class="font-extrabold text-white [-webkit-text-stroke:2px_#000] [paint-order:stroke_fill]"
        >
          hacemos?
        </span>
      </h2>
      <p class="lg:leading-8 lg:w-91 description-section-01 text-center lg:text-left">
        Gracias a nuestra infraestructura tecnológica y alianzas estratégicas
        con especialistas en impresión, ofrecemos una solución verdaderamente
        escalable para campañas con cambios recurrentes.
      </p>
    </article>

    <div class="flex relative mx-auto lg:mx-0">
      <picture class="relative z-2 rotate-3 ml-28 rounded post lg:w-auto w-45">
        <img src="/img/soluciones-impresas/post-01.webp" alt="Como lo hacemos" />
      </picture>
      <picture class="absolute top-2 left-0 z-1 -rotate-6 rounded post lg:w-auto w-45">
        <img src="/img/soluciones-impresas/post-02.webp" alt="Como lo hacemos" />
      </picture>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const objects = ['.como-lo-hacemos', '.post', '.title-section-01', '.description-section-01'];

  ScrollTrigger.create({
    scroller: "main",
    trigger: ".section-01",
    onEnter: () => {
      gsap.fromTo(objects, {
        y: 800,
      }, {
        y: 0,
        delay: 0.3,
        duration: 0.9,
        ease: "power3.out",
        stagger: {
          amount: 0.2,
          from: "random",
        },
      });
    },
  });
</script>