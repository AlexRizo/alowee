---
import PageHomeTitle from "@components/PageHomeTitle.astro";
import "@styles/custom.css";
---

<section
  class="container mx-auto grid grid-cols-2 h-screen snap-start pt-20.5 relative"
>
  <img
    src="img/puntos.svg"
    alt="Puntos"
    class="absolute bottom-10 left-0 w-8"
  />
  <article class="flex flex-col justify-center items-end">
    <div class="w-3/4 flex flex-col gap-5">
      <PageHomeTitle
        title="Servicios"
        titleExalted="Integrales"
        description="Diseñamos y activamos campañas digitales integrales, producimos video o animación 2D comercial, comunicación impresa en múltiples formatos, personalizamos espacios comerciales."
      />
      <picture class="picture mt-2">
        <img
          src="img/servicios-integrales/contenido.webp"
          alt="Representación de contenido digital"
          class="rounded"
        />
      </picture>
    </div>
  </article>

  <div class="flex justify-start items-end relative">
    <img
      src="img/servicios-integrales/tools.webp"
      alt="Tools"
      class="absolute top-20 right-1/2 floating-element-3s"
    />
    <img
      src="img/servicios-integrales/ad-file.webp"
      alt="Ad File"
      class="absolute top-38 left-40 -rotate-12 floating-element-6s"
    />
    <img
      src="img/servicios-integrales/file.webp"
      alt="File"
      class="absolute top-80 left-16 -rotate-12 blur-[2.5px] floating-element-9s"
    />
    <img
      src="img/servicios-integrales/edit-poligon.webp"
      alt="Edit Poligon"
      class="absolute top-3/5 left-14 -rotate-4 blur-[1.5px] floating-element-3s delay-3s"
    />

    <picture>
      <img
        src="img/servicios-integrales/personaje.webp"
        class="w-[703px]"
        alt="Personaje"
      />
    </picture>
  </div>

  <img src="img/puntos.svg" alt="Puntos" class="absolute top-30 right-0 w-8" />
</section>
