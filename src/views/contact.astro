---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();
---

<section
  class="w-full h-screen relative bg-gradient-to-tl from-info-600/50 to-black/35"
>
  <div
    role="banner"
    class="size-full bg-[url('/img/contact-image-bg.webp')] opacity-63 bg-cover absolute top-0 left-0"
  >
  </div>
  <div
    role="banner"
    class="size-full bg-gradient-to-t from-[#3F087E]/53 to-transparent relative"
  >
    <div class="flex flex-col items-center justify-center h-full gap-40">
      <h1 class="2xl:text-8xl xl:text-7xl lg:text-6xl font-bold font-tertiary text-center bg-gradient-to-tl from-pink-100 to-pink-50 bg-clip-text text-transparent 2xl:h-76 xl:h-58 lg:h-48">
        Cada diseño cuenta<br /> una historia, Contemos<br /> la tuya juntos.
      </h1>
      <nav class="flex gap-10">
        <Icon name="mail" class="2xl:size-10.5 xl:size-9 lg:size-8" />
        <Icon name="phone" class="2xl:size-11 xl:size-10 lg:size-9" />
      </nav>
      <div class="flex gap-40 2xl:text-2xl xl:text-xl lg:text-lg">
        <small>© {currentYear}</small>
        <small>ALOWEE.COM</small>
        <small>Colima, Mexico</small>
      </div>
    </div>
  </div>
</section>
